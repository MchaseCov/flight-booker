<h1>Creating a new booking, wow!</h1>
<% departure_airport = @flight_choice.departure_airport.code %>
<% arrival_airport = @flight_choice.arrival_airport.code %>
<% departure_time = @flight_choice.departure_time.strftime("on %m-%d-%Y, at %H:%M") %>
<% arrival_time = (@flight_choice.departure_time + @flight_choice.duration*60*60).strftime("%m-%d-%Y, at %H:%M") %>

<% flash.each do |type, msg| %>
  <div>
    <%= msg %>
  </div>
<% end %>

<li>Please review your purchase information:</li>
<li><%= pluralize(@passenger_count, 'ticket')%></li>
<li>From <%= departure_airport %></li>
<li>To <%= arrival_airport %></li>
<li><%= departure_time %></li>
<li>(Flight will arrive on approximately <%= arrival_time %>)</li>

  <%= form_with model:@booking, local: true do |f| %>
  <% @passenger_count.to_i.times do |i|%>
    <h3><%=(i+1).ordinalize %> passenger's information:</h3>
      <%= f.fields_for :passengers do |p| %>
        <%= p.label :name %><br/>
        <%= p.text_field :name, autofocus: true, required: true %><br/>
        <%= p.label :email %><br/>
        <%= p.text_field :email, required: true %><br/>
      <% end %>
  <% end %>
  <strong>Please review your flight details and passenger information before submitting</strong><br/>
  <%= f.hidden_field :flight_id, value: @flight_choice.id.to_i %>
  <%= f.submit "Purchase!" %>
  <%= hidden_field_tag :passenger_count, @passenger_count %>
  <%= hidden_field_tag :flight_choice, @flight_choice.id.to_i %>
<% end %>