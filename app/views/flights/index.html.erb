<% content_for :banner do %>
<div class="image-parent">
  <%= image_tag('pexels-pixabay-163771.jpg', class: 'banner-image')%>
</div>
<div id="javascript" style="display: none;">
  <script src="http://code.jquery.com/jquery-1.11.0.min.js"></script>
  <%= javascript_pack_tag 'flights' %>
</div>
<div class="content-region">
  <h1 class="title-text">FlightFinder <%= image_tag('bx-paper-plane.svg', class: 'logo-img')%></h1>
    <div class="search-region">
      <%= render "flight_search", flights: @flights, arrival_airports: @arrival_airports, depart_airports: @depart_airports %>
    </div>
    <% flash.each do |type, msg| %>
      <div>
        <%= msg %>
      </div>
    <% end %>
</div>
  <% end %>
<% content_for :content do %>
  <%= render "flight_list", filtered_flights: @filtered_flights %>
<% end %>